<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ProjekatRMA" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!--pozadina-->
    <style name="background">
        <item name="android:background">@color/white</item>
    </style>
    <style name="button">
        <item name="android:background">@color/purple_500</item>
    </style>

    <style name="textButtonColor">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="editText">
        <item name="android:background">@color/purple_200</item>
        <item name="android:strokeColor">@color/red</item>
    </style>

    <style name="textEditText">
        <item name="android:textColor">@color/white</item>
    </style>





    <style name="TextViewStyle" parent="Theme.ProjekatRMA">
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:textColor">@color/purple_500</item>
        <item name="android:textSize">24sp</item>
    </style>


</resources>